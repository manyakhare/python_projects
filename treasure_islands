
row1 = ["⬜️","⬜️","⬜️"]
row2 = ["⬜️","⬜️","⬜️"]
row3 = ["⬜️","⬜️","⬜️"]
map = [row1, row2, row3]
print(f"{row1}\n{row2}\n{row3}")
position = input("Where do you want to put the treasure? ")

pos_zero = int(position[0])
pos_one = int(position[1])
map[pos_one--1][pos_zero-1] = 'x'

print(f"{row1}\n{row2}\n{row3}")
